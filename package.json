{
  "name": "ragnarok-apple",
  "productName": "RA",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "server": "http-server -o",
    "build": "npm run build-mac;npm run build-win",
    "build-mac": "electron-builder --mac --x64",
    "build-win": "electron-builder --win --x64",
    "asar-pack": "asar pack local_build renderer.asar"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/illionillion/dev-novelgame-test2022.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/illionillion/dev-novelgame-test2022/issues"
  },
  "homepage": "https://github.com/illionillion/dev-novelgame-test2022#readme",
  "devDependencies": {
    "asar": "^3.1.0",
    "electron": "^17.1.0",
    "electron-builder": "^23.0.3",
    "http-server": "^14.1.1"
  },
  "build": {
    "appId": "net.makitokatsube.app.1st",
    "files": [
      "node_modules/",
      "package.json",
      "package-lock.json",
      "src/",
      ".env"
    ],
    "mac": {
      "target": "dmg",
      "icon": "src/app.png"
    },
    "win": {
      "target": "nsis",
      "icon": "src/app.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "dotenv": "^9.0.2"
  }
}
